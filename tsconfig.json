{
  "compilerOptions": {
    "target": "ES6",               // Specifies the target JavaScript version
    "module": "commonjs",          // Specifies the module system (Node.js uses CommonJS)
    "rootDir": "./src",            // Where your TypeScript files are located
    "outDir": "./dist",            // Where the compiled JavaScript files should be placed
    "strict": true,                // Enables strict type-checking
    "esModuleInterop": true        // Allows compatibility with CommonJS modules
  },
  "include": [
    "src/**/*.ts"                   // Include all TypeScript files in the src directory
  ]
}
